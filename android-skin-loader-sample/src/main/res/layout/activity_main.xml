<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:padding="20dp"
        skin:enable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_skin_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认皮肤" />

            <Button
                android:id="@+id/btn_skin_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="新皮肤" />

        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/color_red"
            skin:enable="true" />

        <View
            android:id="@+id/view_gradient"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_red_green"
            skin:enable="true" />

        <Button
            android:id="@+id/cb_text_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:padding="5dp"
            android:text="字体颜色选择（按压）"
            android:textColor="@color/selector_text"
            android:textSize="24sp"
            skin:enable="true" />

        <Button
            android:id="@+id/btn_drawable_selector"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_drawable"
            skin:enable="true" />

    </LinearLayout>

</layout>